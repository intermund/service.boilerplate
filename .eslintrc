{
    "root": true,

    "env": {
        "es6": true,
        "node": true
    },

    "globals": {
        "document": false,
        "navigator": false,
        "window": false
    },

    "extends": ["prettier", "eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "semi": 0,
        "space-in-parens": 0,
        "eol-last": 0,
        "no-undef": 1
    }
}
